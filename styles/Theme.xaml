<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ClipGuardLight">#141414</Color>
    <Color x:Key="ClipGuardSurface">#1C1C1C</Color>
    <Color x:Key="ClipGuardMuted">#242424</Color>
    <Color x:Key="ClipGuardInk">#0F0F0F</Color>
    <Color x:Key="ClipGuardSoft">#B0B0B0</Color>
    <Color x:Key="ClipGuardSlate">#2E2E2E</Color>
    <Color x:Key="ClipGuardDust">#3A3A3A</Color>
    <Color x:Key="ClipGuardAccent">#7EA6FF</Color>
    <Color x:Key="ClipGuardAccentSoft">#4A5F86</Color>
    <Color x:Key="ClipGuardSuccess">#86E29B</Color>
    <Color x:Key="ClipGuardText">#F2F2F2</Color>

    <SolidColorBrush x:Key="ClipGuardInkBrush" Color="{StaticResource ClipGuardInk}" />
    <SolidColorBrush x:Key="ClipGuardMutedBrush" Color="{StaticResource ClipGuardMuted}" />
    <SolidColorBrush x:Key="ClipGuardSlateBrush" Color="{StaticResource ClipGuardSlate}" />
    <SolidColorBrush x:Key="ClipGuardDustBrush" Color="{StaticResource ClipGuardDust}" />

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource ClipGuardLight}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource ClipGuardSurface}" />
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource ClipGuardMuted}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource ClipGuardText}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource ClipGuardSoft}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource ClipGuardAccent}" />
    <SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource ClipGuardAccentSoft}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource ClipGuardSuccess}" />

    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}" />
        <Setter Property="WindowStartupLocation" Value="CenterScreen" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
    </Style>

    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="14" />
        <Setter Property="BorderBrush" Value="{StaticResource ClipGuardDustBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource ClipGuardInkBrush}" />
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <Setter Property="Padding" Value="18,10" />
        <Setter Property="Margin" Value="0,6" />
        <Setter Property="MinWidth" Value="140" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource ClipGuardSlateBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource ClipGuardDustBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GhostButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource ClipGuardDustBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource ClipGuardSlateBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ClipGuardDustBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}" />
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource ClipGuardSlateBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ClipGuardDustBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Margin" Value="0,4" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ClipGuardSlateBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ClipGuardDustBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Margin" Value="0,4" />
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="Background" Value="{StaticResource ClipGuardSlateBrush}" />
    </Style>

    <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="8,0,0,0" />
        <Setter Property="FontSize" Value="14" />
    </Style>
</ResourceDictionary>
